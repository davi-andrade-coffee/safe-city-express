{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",                                 
    "module": "commonjs", 
    "rootDir": "./src",            
    "outDir": "./dist",                         
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,        
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}
